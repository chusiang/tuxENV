#!/bin/bash


# = language =
tty=`tty`
t=`echo $tty|awk -F "/" '{print $3}'`
if [ "$(tty)" = "/dev/tty1" ] || [ $t = pts ]; then
 export LANGUAGE="zh_TW.UTF-8"
 export LANG="zh_TW.UTF-8"
 export LC_ALL="zh_TW.UTF-8"
fi

man $1

